---
import { getLangFromUrl } from '../../i18n/utils'

const lang = getLangFromUrl(Astro.url)

const about = await Astro.glob(`../../content/apropos/**/*.md`).then((abouts) => {
	return abouts.find((a) => a.file.includes(`/${lang}/`))?.compiledContent()
})
---

<div class="mx-auto my-10">
	<h2 class="mx-auto max-w-[1536px]" id="about">Ã€ propos</h2>
	<div class="h-full bg-[url(/img/bg-2.png)] pb-28 sm:pt-44">
		<!--Boite de dialogue -->
		<div class="bg-ff7 container relative mx-auto flex h-auto">
			<!-- profil image-->
			<img
				class="absolute bottom-0 hidden object-cover sm:h-5/6 md:-left-48 md:inline md:h-[calc(100%+200px)] lg:-left-32"
				src="/img/avatar.png"
				alt=""
			/>
			<!-- Body-->
			<div class="ml-auto w-auto md:pl-80">
				<!-- Name Tag-->
				<h3 class="mb-5">Laurent-P.</h3>
				<!-- Content -->
				<!-- profil image-->
				<img class="md:hidden" src="/img/avatar.png" alt="" />
				<div class="about--body" set:html={about} />
			</div>
		</div>
	</div>
</div>

<style is:global>
	.about--body > p {
		@apply mb-2;
	}
</style>
