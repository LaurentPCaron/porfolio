---
const { class: className } = Astro.props
---

<script>
	const getTime = () =>
		new Date().toLocaleTimeString('en-US', {
			hour: '2-digit',
			minute: '2-digit',
			second: '2-digit',
			hour12: false
		})
	const clockElelment = document.querySelector('#clock')
	clockElelment!.innerHTML = getTime()
	setInterval(() => {
		clockElelment!.innerHTML = getTime()
	}, 1000)
</script>

<div class=`grid grid-cols-4 grid-rows-2 md:text-2xl text-white ${className}`>
	<p>Laurent-P.</p>
	<p class="col-start-3 text-center">World</p>
	<p class="justify-self-end">Time</p>
	<p>000000</p>
	<p class="text-center">
		<i class="fa-solid fa-mug-hot cafe-shadow mr-1 text-[#DE421C]"></i>x5
	</p>
	<p class="text-center">1-1</p>
	<p id="clock" class="justify-self-end"></p>
</div>

<style lang="scss">
	.cafe-shadow {
		text-shadow: 2px 2px black;
		animation: color-transition 1s linear infinite alternate;
	}
	@keyframes color-transition {
		0% {
			@apply text-[#DE421C];
		}
		100% {
			@apply text-orange-300;
		}
	}
</style>
